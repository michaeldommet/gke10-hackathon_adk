# ================================================================
# ADK Self-Healing Agent Environment Configuration
# ================================================================
# Copy this file to .env and configure with your actual values

JIRA_URL=
JIRA_USERNAME=
JIRA_TOKEN=


# Google Cloud Configuration (for Vertex AI)
GOOGLE_CLOUD_PROJECT=
GOOGLE_CLOUD_REGION=
GOOGLE_GENAI_USE_VERTEXAI=TRUE
GOOGLE_CLOUD_LOCATION=us-central1

# Google AI Studio Configuration (alternative to Vertex AI)
# Get your API key from: https://makersuite.google.com/app/apikey
USE_GOOGLE_AI_STUDIO=false
#GOOGLE_API_KEY=your-google-ai-studio-api-key

# ADK Model Configuration
ADK_PROJECT_ID=
ADK_LOCATION=us-central1
ADK_MODEL_NAME=gemini-2.5-pro
ADK_MODEL_TEMPERATURE=0.1

# Kubernetes Configuration  
K8S_NAMESPACE=default
ADK_K8S_NAMESPACE=default
ADK_CLUSTER_NAME=bank-of-anthos
ADK_REGION=us-central1

# ADK Monitoring Configuration
ADK_MONITORING_INTERVAL=60
ADK_METRICS_RETENTION_HOURS=24
ADK_ALERT_COOLDOWN_MINUTES=15

# Agent Configuration
DEBUG=true
ADK_AUTOPILOT_MODE=true


# ADK Security Configuration
ADK_ENABLE_WORKLOAD_IDENTITY=true
ADK_SERVICE_ACCOUNT=self-healing-agent
ADK_AUDIT_LOGGING=true

# Slack Integration (Optional)
# ----------------------------------------------------------------
# Slack webhook configuration for real-time notifications
# Create a Slack app and incoming webhook at: https://api.slack.com/apps
SLACK_WEBHOOK_URL=