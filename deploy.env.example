# ================================================================
# ADK Self-Healing Agent Deployment Configuration
# ================================================================
# 
# This file contains deployment-specific configuration.
# Copy this to deploy.env and customize for your environment.

# ----------------------------------------------------------------
# Google Cloud Project Configuration
# ----------------------------------------------------------------
# REQUIRED: Your GCP Project ID
PROJECT_ID=your-project-id

# GCP Region and Zone
REGION=us-central1
ZONE=us-central1-a

# ----------------------------------------------------------------
# GKE Cluster Configuration
# ----------------------------------------------------------------
# Cluster name
CLUSTER_NAME=adk-cluster

# Cluster configuration
MACHINE_TYPE=e2-standard-4
MIN_NODES=1
MAX_NODES=10
INITIAL_NODES=3

# ----------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------
# Docker image settings
IMAGE_TAG=latest
REGISTRY_REGION=us-central1

# Kubernetes namespaces
ADK_NAMESPACE=adk-agent
BANK_NAMESPACE=bank-of-anthos

# ----------------------------------------------------------------
# Deployment Options
# ----------------------------------------------------------------
# Safety settings
DRY_RUN=false
FORCE=false
VERBOSE=true

# Skip certain steps (set to true to skip)
SKIP_APIS=false
SKIP_BANK_OF_ANTHOS=false
SKIP_CLUSTER_CREATION=false

# ----------------------------------------------------------------
# Advanced Configuration
# ----------------------------------------------------------------
# Network settings
NETWORK=default
SUBNET=default

# Monitoring and logging
ENABLE_MONITORING=true
ENABLE_LOGGING=true
ENABLE_WORKLOAD_IDENTITY=true

# Node pool configuration
PREEMPTIBLE_NODES=false
AUTO_UPGRADE=true
AUTO_REPAIR=true
